<h1 class="my-5 text-center">Добавление товара</h1>

<form method="POST" class="mb-5" style="width: 800px; margin:auto">
	<div class="mb-3">
		<label for="image" class="form-label fs-5">Изображение товара</label>
		<input class="form-control" type="text" id="image" name="image">
	</div>
	<div class="mb-3">
		<label for="name" class="form-label fs-5">Наименование</label>
		<input class="form-control" type="text" id="name" name="name">
	</div>
	<div class="mb-3">
		<label for="description" class="form-label fs-5">Описание</label>
		<textarea style="resize: none" rows="4" maxlength=255 class="form-control" id="description" name="description">{{product.description}}</textarea>
	</div>
	<div class="mb-3">
		<label for="manufacturer" class="form-label fs-5">Производитель</label>
		<input class="form-control" type="text" id="manufacturer" name="manufacturer">
	</div>
	<div class="mb-3">
		<label for="country" class="form-label fs-5">Страна производитель</label>
		<input class="form-control" type="text" id="country" name="country">
	</div>
	<div class="mb-3">
		<label for="price" class="form-label fs-5">Цена</label>
		<input class="form-control" type="text" id="price" name="price">
	</div>
	<div class="d-flex justify-content-between mt-4">
		<a href="/catalog" class="btn btn-primary btn-lg">Назад</a>
		<input class="btn btn-primary btn-lg" type="submit" value="Сохранить">
	</div>
</form>
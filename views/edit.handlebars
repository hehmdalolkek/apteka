<h1 class="my-5 text-center">Редактирование товара</h1>

<form method="POST" class="mb-5" style="width: 800px; margin:auto">
	<input type="hidden" name="id" value="{{product.id}}">
	<div class="mb-3">
		<label for="image" class="form-label fs-5">Изображение товара</label>
		<input class="form-control" type="text" id="image" name="image" value="{{product.image}}">
	</div>
	<div class="mb-3">
		<label for="name" class="form-label fs-5">Наименование</label>
		<input class="form-control" type="text" id="name" name="name" value="{{product.name}}">
	</div>
	<div class="mb-3">
		<label for="description" class="form-label fs-5">Описание</label>
		<textarea class="form-control" id="description" name="description">{{product.description}}</textarea>
	</div>
	<div class="mb-3">
		<label for="manufacturer" class="form-label fs-5">Производитель</label>
		<input class="form-control" type="text" id="manufacturer" name="manufacturer" value="{{product.manufacturer}}">
	</div>
	<div class="mb-3">
		<label for="country" class="form-label fs-5">Страна производитель</label>
		<input class="form-control" type="text" id="country" name="country" value="{{product.country}}">
	</div>
	<div class="mb-3">
		<label for="price" class="form-label fs-5">Цена</label>
		<input class="form-control" type="text" id="price" name="price" value="{{product.price}}">
	</div>
	<div class="d-flex justify-content-between mt-4">
		<a href="/catalog" class="btn btn-primary btn-lg">Назад</a>
		<input class="btn btn-primary btn-lg" type="submit" value="Сохранить">
	</div>
</form>
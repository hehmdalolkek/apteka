<h1 class="text-center my-5">Товары</h1>

<div id="filters" class="row mb-4">

	<div class="col-sm-4"><h4>Поиск</h4>
		<div class="input-group">
			<input type="text" class="form-control" placeholder="Введите название товара" id="search">
		</div>
	</div>

	<div class="col-sm-3"><h4>Цена</h4>
		<div class="input-group">
			<input type="number" class="form-control" placeholder="От:" id="price-min">
			<input type="number" class="form-control" placeholder="До:" id="price-max">
		</div>
	</div>

	<div class="col-sm-3"><h4>Производитель</h4>
		<select class="form-control" id="manufacturer">
		<option value="">-- Все производители --</option>
		{{#each filter}}
			<option value="{{this}}">{{this}}</option>
		{{/each}}
		</select>     
	</div>

	<div class="col-sm-2 align-self-end">
		<a class="btn btn-primary btn-lg d-block" href="/create">Добавить товар</a>
	</div>
</div>

<div class="mb-5">
	<table class="table table-hover text-center" id="goods"></table>
</div>


<script src="js/main.js"></script>
<script>
	initApp({{{ products }}});
</script>
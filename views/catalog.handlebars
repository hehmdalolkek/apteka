<h1 class="text-center my-5">Все товары</h1>

<div id="filters" class="row mb-4">
	<div class="col-sm-3 offset-sm-3"><h4>Производитель</h4>
		<select class="form-control" id="manufacturer">
		<option value="">-- Все производители --</option>
		{{#each filter}}
			<option value="{{this}}">{{this}}</option>
		{{/each}}
		</select>     
	</div>

	<div class="col-sm-3"><h4>Цена</h4>
		<div class="input-group">
			<input type="number" class="form-control" placeholder="От:" id="price-min">
			<input type="number" class="form-control" placeholder="До:" id="price-max">
		</div>
	</div>
</div>

<div>
	<table class="table table-hover text-center" id="goods"></table>
</div>

<div>
	<a class="d-inline-block text-decoration-none mb-5 mt-4 py-2 px-5 text-bg-primary bg-primary fs-5" href="/">Назад</a>
</div>


<script src="js/main.js"></script>
<script>
	initApp({{{ products }}});
</script>